
<main class="main-container">
    <section class="form-wrapper">
        <h1 class="form-title">Novo Produto</h1>
        
        <form action="/cadastrar" method="POST" enctype="multipart/form-data" class="custom-form">
            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" id="nome" name="nome" placeholder="Ex: Teclado Mecânico" required>
            </div>
            
            <div class="form-group">
                <label for="valor">Preço (R$)</label>
                <input type="number" id="valor" name="valor" placeholder="0.00" step="0.01" required>
            </div>
            
            <div class="form-group">
                <label for="imagem">Imagem</label>
                <input type="file" id="imagem" name="imagem" class="file-input" accept="image/*" required>
            </div>
            
            <button type="submit" class="submit-btn">Cadastrar Produto</button>
        </form>
    </section>
</main>